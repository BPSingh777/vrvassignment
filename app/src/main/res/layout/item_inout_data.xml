<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/AttendanceserialNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:text="S.No."
        android:textColor="#045885"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />
    <!-- Date -->
    <TextView
        android:id="@+id/Attendancedatetxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:gravity="center"
        android:text="Date"
        android:textColor="#045885"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/AttendanceCheckIntxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:gravity="center"
        android:text="CheckIn"
        android:textColor="#045885"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />
    <!-- Time -->
    <TextView
        android:id="@+id/AttendanceCheckOuttxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:gravity="center"
        android:text="CheckOut "
        android:textColor="#045885"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />
    <!-- Remarks -->
    <TextView
        android:id="@+id/AttendanceTimeSpenttxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:text="Time Spent"
        android:textColor="#045885"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/AttendanceRemarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:text="Remarks"
        android:textColor="#045885"
        android:textSize="9sp" />

</LinearLayout>