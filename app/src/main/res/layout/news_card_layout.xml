<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:outlineAmbientShadowColor="#00ff97"
    android:outlineSpotShadowColor="#00ff97"
    app:cardCornerRadius="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/NewsHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#1744C3"/>

        <TextView
            android:id="@+id/NewsDescription"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/newsImage"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>



        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/NewsViewMorebtn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="View Full Article"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"/>

        <LinearLayout
            android:id="@+id/newslayout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_margin="5dp"
                android:id="@+id/NewsArticle"
                android:text="News Article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/newsViewless"
                android:layout_marginTop="5dp"
                android:text="View Less"
                android:textColor="@color/white"
                android:background="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
